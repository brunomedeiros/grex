    <div class="trilha geral">
		<div class="titulo-lista">Geral <span class="nav-next">&gt;</span></div>
        <div class="slider">
		<% for talk in @tracks[:geral] do %>
			<div class="linha <%=is_talk_selected? talk.id, @user_tracks%>">
                <input type="hidden" value="<%= talk.id %>" >
                <div class="horario">
                	<p><%= talk.start.hour.to_s.rjust(2, '0') %><%=':'+talk.start.min.to_s.rjust(2, '0') %></p>
                	<p class="fim"><%= talk.end.hour.to_s.rjust(2, '0') %><%= ':'+talk.end.min.to_s.rjust(2, '0') %></p>
                </div>
                <div class="escolha">
                    <a href="#" title="Eu vou!" class="btn-vo">Eu vo!</a>
                    <span class="quantidade"><%= talk.viewers %></span>
                </div>
                <div class="descricao">
                    <p class="ver-detalhes"><%= link_to talk.title, "/talks/show/#{talk.id}" %></p>
                    <p class="palestrante"><%= talk.speakers.map {|speaker| speaker.name}.join(', ') %></p>
	                <p class="tipo"><%= talk.type %> - <%= show_talk_level talk.level %></p>
