<div class="header">
  <h1>Even.to</h1>
</div>
<div class="autenticacao">
    <% if signed_in? %>
      <%= current_user.twitter %>
      <%= link_to "Log out", "/sessions/logout" %>
    <% else %>
      <%= link_to("Logar", "/auth/twitter") %>
    <% end %>
</div>
