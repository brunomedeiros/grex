<div class="header">
  <h1><%= link_to "grex", "/", {:title => 'grex' } %></a></h1>
	<% if signed_in? %><a href="<%= url_for "/users/list/" %>" class="twitter"><img src="<%=current_user.avatar%>" title="<%=current_user.twitter%>"/>Minha programação</a><% end %>
  	<%= link_to "Sair", "/sessions/logout", { :class=>'sair', :title => 'Sair' } if signed_in? %></a>
</div>
<div class="menu">
  <ul>
	<li><a href="/schedules?date=2011-06-29" title="Primeiro dia" class="<%= "active" if @date == "2011-06-29"%>" >29/06</a></li>
