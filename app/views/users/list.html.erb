  	<div>12</div>
  	<div>13</div>
  	<div>14</div>
  	<div>15</div>
  	<div>16</div>
  	<div>17</div>
  	<div>18</div>
  </div>
  <div class="primeiro-dia dia">
    <div class="trilha geral">
		<div class="linha hora-cheia">29/06</div>
		<% for talk in @talks[:first] do %>
			<div class="linha meia-hora"><input type="hidden" value="<%= talk.id %>" ><div class="descricao"><%=talk.title%></div></div>
		<% end %>
		<div class="linha hora-cheia">30/06</div>
		<% for talk in @talks[:second] do %>
			<div class="linha meia-hora"><input type="hidden" value="<%= talk.id %>" ><div class="descricao"><%=talk.title%></div></div>
		<% end %>
		<div class="linha hora-cheia">01/07</div>
		<% for talk in @talks[:third] do %>
			<div class="linha meia-hora"><input type="hidden" value="<%= talk.id %>" ><div class="descricao"><%=talk.title%></div></div>
		<% end %>
    </div>
  </div>

</div>

